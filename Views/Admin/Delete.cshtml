@model LunchGuide.Models.DishModel


@if ( @ViewBag.antal == null) {
    <div>
        <p>Är du säker på att du vill radera @Html.DisplayFor(model => model.Dish) från menyn?</p>
        <br />
    </div>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Delete" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">

                    <input type="hidden" asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input class="btn btn-danger" type="submit" value="Radera" class="btn-default" />
                </div>
            </form>
        </div>
    </div>
}
else if (@ViewBag.error != "") {
    @ViewBag.error
}
else {
    <div>
        <p> Maträtten är borttagen </p>
    </div>
}


<br/>

<div>
    <a asp-controller="Admin" asp-action="AdminOverview"><type ="button" class="btn btn-success">Tillbaka</button></a>
</div>

